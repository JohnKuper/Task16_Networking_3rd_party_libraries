<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_detail_bg"
        android:padding="@dimen/activity_padding"
        android:orientation="vertical">

        <!-- Details header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/gradient_detail_header_bg">
            <!-- Repository image -->
            <ImageView
                android:id="@+id/detail_repo_image"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/ic_github"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <!-- Star icon -->
            <ImageView
                android:id="@+id/detail_star_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repository's details"
                android:layout_toRightOf="@id/detail_repo_image"
                android:layout_centerInParent="true"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/background_material_dark"/>

            <TextView
                android:id="@+id/detail_repo_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="5693"
                android:paddingTop="5dp"
                android:layout_below="@id/detail_star_image"
                android:layout_toLeftOf="@id/detail_star_image"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repository name"
            style="?android:listSeparatorTextViewStyle"/>

        <!-- Repository name-->
        <TextView
            android:id="@+id/detail_repo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="35"
            android:text="material-design-icons"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_repo_name"
            android:text="DESCRIPTION"
            style="?android:listSeparatorTextViewStyle"/>

        <!-- Repository description-->
        <TextView
            android:id="@+id/detail_repo_discription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Very powerfull image loader"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_repo_name"
            android:text="ID"
            style="?android:listSeparatorTextViewStyle"/>

        <!-- Repository ID-->
        <TextView
            android:id="@+id/detail_repo_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="453452345"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_repo_name"
            android:text="Full name"
            style="?android:listSeparatorTextViewStyle"/>

        <!-- Repository full name-->
        <TextView
            android:id="@+id/detail_repo_full_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="google/material-design-icons"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_repo_name"
            android:text="Owner"
            style="?android:listSeparatorTextViewStyle"/>


        <TextView
            android:id="@+id/detail_owner_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login: "/>

        <TextView
            android:id="@+id/detail_owner_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_owner_login"
            android:text="ID: "
            />

        <TextView
            android:id="@+id/detail_owner_avatar_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_owner_id"
            android:text="Avatar URL: "/>

        <TextView
            android:id="@+id/detail_owner_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_owner_avatar_url"
            android:text="Type: "/>

        <TextView
            android:id="@+id/detail_owner_site_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_owner_type"
            android:text="Site admin: "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_repo_name"
            android:text="Other details"
            style="?android:listSeparatorTextViewStyle"/>


        <TextView
            android:id="@+id/detail_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_owner_avatar_url"
            android:text="Private: "/>

        <TextView
            android:id="@+id/detail_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_owner_avatar_url"
            android:text="Created at: 2013-10-23, 18:24:35"/>

    </LinearLayout>
</ScrollView>